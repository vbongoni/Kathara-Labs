# Setup syslog first
bash /shared/setup_syslog.sh

# Configure interfaces
ifconfig eth0 100.20.1.2/24 up
ifconfig eth1 100.20.2.2/24 up
ifconfig eth2 100.20.3.2/24 up

# Log interface configuration
logger -t "NetworkSim" "Interface eth0 configured: 100.20.1.2/24"
logger -t "NetworkSim" "Interface eth1 configured: 100.20.2.2/24"
logger -t "NetworkSim" "Interface eth2 configured: 100.20.3.2/24"

# Start FRR
systemctl start frr

# Log FRR startup
logger -t "NetworkSim" "FRR service started on r21"
